	<authorEmail>support@devxive.com</authorEmail>
	<authorUrl>http://www.devxive.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_SYSTEM_XAFRAMEWORK_XML_DESCRIPTION</description>
	<files>
		<filename plugin="xaframework">xaframework.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>diacritics</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>lang</folder>
		<folder>lang_unformatted</folder>
		<folder>language</folder>
		<folder>php-parser</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.plg_system_xaframework.ini</language>
		<language tag="en-GB">en-GB.plg_system_xaframework.sys.ini</language>
		<language tag="de-DE">de-DE.plg_system_xaframework.ini</language>
		<language tag="de-DE">de-DE.plg_system_xaframework.sys.ini</language>
	</languages>
	<media destination="xaframework" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>scripts</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="xaf_stylesheet" type="radio"
					label="PLG_SYSTEM_XAFRAMEWORK_STYLESHEET_LABEL"
					description="PLG_SYSTEM_XAFRAMEWORK_STYLESHEET_DESC"
					default="yes"
				>
					<option value="no">PLG_SYSTEM_XAFRAMEWORK_NO</option>
					<option value="yes">PLG_SYSTEM_XAFRAMEWORK_YES</option>
				</field>
				<field name="xaf_phppattern" type="radio"
					label="PLG_SYSTEM_XAFRAMEWORK_PHPPATTERN_LABEL"
					description="PLG_SYSTEM_XAFRAMEWORK_PHPPATTERN_DESC"
					default="no"
				>
					<option value="no">PLG_SYSTEM_XAFRAMEWORK_NO</option>
					<option value="yes">PLG_SYSTEM_XAFRAMEWORK_YES</option>
				</field>
				<field name="xaf_system_stylesheet" type="radio"
					label="PLG_SYSTEM_XAFRAMEWORK_SYSTEM_STYLESHEET_LABEL"
					description="PLG_SYSTEM_XAFRAMEWORK_SYSTEM_STYLESHEET_DESC"
					default="yes"
				>
					<option value="no">PLG_SYSTEM_XAFRAMEWORK_NO</option>
					<option value="yes">PLG_SYSTEM_XAFRAMEWORK_YES</option>
				</field>
				<field name="xaf_external_link_operator" type="radio"
					label="PLG_SYSTEM_XAFRAMEWORK_EXTERNAL_LINK_OPERATOR_LABEL"
					description="PLG_SYSTEM_XAFRAMEWORK_EXTERNAL_LINK_OPERATOR_DESC"
					default="no"
				>
					<option value="no">PLG_SYSTEM_XAFRAMEWORK_NO</option>
					<option value="yes">PLG_SYSTEM_XAFRAMEWORK_YES</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="xaf_custom_replacements_patterns" type="textarea"
					label="PLG_SYSTEM_XAFRAMEWORK_CUSTOM_REPLACEMENTS_TARGETS_LABEL"
					description="PLG_SYSTEM_XAFRAMEWORK_CUSTOM_REPLACEMENTS_TARGETS_DESC"
					rows="5"
					cols="30"
					default=""
				></field>
				<field name="xaf_custom_replacements_replacements" type="textarea"
					label="PLG_SYSTEM_XAFRAMEWORK_CUSTOM_REPLACEMENTS_REPLACEMENTS_LABEL"
					description="PLG_SYSTEM_XAFRAMEWORK_CUSTOM_REPLACEMENTS_REPLACEMENTS_DESC"
					rows="5"
					cols="30"
					default=""
				></field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="MOOTOMBO - Update Server">http://wgmd.net/upds-mtbo/apps/plugins/xaframework/extension.xml</server>
	</updateservers>
</extension>