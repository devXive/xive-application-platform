<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="system">
    <name>System - Xive Application Framework</name>
    <creationDate>2012-07-04</creationDate>
    <author>devXive - research and development</author>
    <authorEmail>support@devXive.com</authorEmail>
    <authorUrl>http://www.devXive.com</authorUrl>
    <copyright>http://www.devXive.com</copyright>
    <license></license>
    <version>2.0.0</version>
	<description><![CDATA[
		<h1>The power of Web Development</h1>
		<h2>Twitter Bootstrap</h2>
		<p>
			Using Twitter Bootstrap as a library in Joomla or Mootombo sites easily.<br>
			<ul>
				<li>Twitter Bootstrap is a powerful CSS framework, more details, please refer http://twitter.github.com/bootstrap/</li>
			</ul>
		</p>
		<br>
		<h2>Changelog</h2>
		<h4>Version: 1.0.0</h4>
		<ul>
			<li>initial release</li>
		</ul>
		<br>
		<p>Twitter Bootstrap Version: 2.0.4 --- jquery Version: 1.7.2</p>
		<p>Created by <a href="http://www.devxive.com" target="_blank">devXive - research and development | devXive.com</a>.</p>
	]]></description>
    <files>
        <filename plugin="xaframework">xaframework.php</filename>
        <filename>index.html</filename>
    </files>
    <media>
        <folder>xaframework</folder>
    </media>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="loadCSS" type="radio"
                       default="1"
                       description="Load Bootstrap CSS files for all pages"
                       label="Load CSS"
                        >
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="loadJS" type="radio"
                       default="1"
                       description="Load Bootstrap JavaScript files for all pages"
                       label="Load JavaScript"
                        >
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>

                <field name="loadJQuery" type="radio"
                       default="1"
                       description="Bootstrap JavaScript depends on jQuery"
                       label="Load jQuery"
                        >
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="jQueryFromLocal" type="radio"
                       default="1"
                       description="Load jQuery from your own site, otherwise load jQuery from Google AJAX Libraries CDN."
                       label="Load jQuery from Local"
                        >
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>

            </fieldset>
            <fieldset  name="advanced">
                <field name="loadGoogleCodePrettify" type="radio"
                       default="0"
                       description="Load Google Code Prettify"
                       label="Load GoogleCodePrettify"
                        >
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="onlyFrontside" type="radio"
                       default="1"
                       description="The Scope to enable bootstrap"
                       label="Scope"
                        >
                    <option value="1">Site</option>
                    <option value="0">Both Admin and Site</option>
                </field>
                <field name="onlyHTML" type="radio"
                       default="1"
                       description="Which file type to enalbe bootstrap"
                       label="File Types"
                        >
                    <option value="1">HTML</option>
                    <option value="0">All Types</option>
                </field>
                <field name="notModal" type="radio"
                       default="1"
                       description="Enable Bootstrap for Modal Dialog"
                       label="Modal Dialog"
                        >
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
